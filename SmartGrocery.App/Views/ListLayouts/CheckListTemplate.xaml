<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="SmartGrocery.App.Views.ListLayouts.CheckListTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*,Auto">
        <Entry Grid.Row="0"
            TextColor="AliceBlue"
            Placeholder="Search items..."
            Text="{Binding SearchQuery}"
            ClearButtonVisibility="WhileEditing" 
            IsVisible="{Binding HasItems}"/>
        <Label Grid.Row="1"
            FontSize="16"
            HorizontalTextAlignment="Center"
            IsVisible="{Binding HasItems, Converter={StaticResource InverseBoolConverter}}"
            Text="You donâ€™t have any items yet."
            TextColor="Gray"
            VerticalOptions="CenterAndExpand" />
        <!--  Lista de itens  -->
        <CollectionView Grid.Row="2"
            ItemsSource="{Binding Items}" 
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">

                        <!--  Checkbox  -->
                        <CheckBox
                            Grid.Column="0"
                            CheckedChanged="OnCheckedChanged"
                            IsChecked="{Binding IsChecked}"
                            VerticalOptions="Center" />

                        <!--  Nome do item (riscado se marcado)  -->
                        <Label
                            Grid.Column="1"
                            FontSize="16"
                            Text="{Binding ItemName}"
                            VerticalOptions="Center">

                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsChecked}"
                                    TargetType="Label"
                                    Value="True">
                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                    <Setter Property="TextColor" Value="Gray" />
                                </DataTrigger>
                            </Label.Triggers>

                        </Label>

                        <!--  Delete  -->
                        <Button
                            Grid.Column="2"
                            BackgroundColor="Transparent"
                            Command="{Binding BindingContext.DeleteItemCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                            CommandParameter="{Binding .}"
                            Text="ðŸ—‘" />

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <!--  AÃ§Ãµes  -->
        <HorizontalStackLayout Grid.Row="3"
            HeightRequest="200"
            Spacing="10">

            <Button Command="{Binding AddItemCommand}" Text="Add item" />

            <Button Command="{Binding ClearCheckedCommand}" Text="Clear checked" />

        </HorizontalStackLayout>

    </Grid>
</ContentView>
