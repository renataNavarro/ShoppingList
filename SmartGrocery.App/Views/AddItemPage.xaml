<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SmartGrocery.App.Views.AddItemPage"
    Title="Add Item"
    Padding="20">

    <VerticalStackLayout Spacing="15">

        <!-- Nome do item -->
        <Entry x:Name="ItemNameEntry" Placeholder="Item name"/>

        <!-- Quantidade -->
        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
            <Label Text="Quantity:" VerticalOptions="Center"/>
            <Stepper x:Name="QuantityStepper" Minimum="1" Maximum="50" Increment="1" Value="1"/>
            <Label x:Name="QuantityLabel" Text="1" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- BotÃµes -->
        <HorizontalStackLayout Spacing="10">
            <Button Text="Cancel" Clicked="Cancel_Clicked"/>
            <Button Text="Add" Clicked="Add_Clicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>

